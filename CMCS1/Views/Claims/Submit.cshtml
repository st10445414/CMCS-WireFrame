@model ClaimViewModel
<section class="card">
    <h2>Submit Claim (Wireframe)</h2>

    <div class="grid">
        <label>Month <input value="@Model.Month" disabled /></label>
        <label>Year <input value="@Model.Year" disabled /></label>
        <label>Hourly Rate (ZAR) <input value="@Model.HourlyRate" disabled /></label>
    </div>

    <h3>Line Items</h3>
    <table>
        <thead><tr><th>Date</th><th>Module</th><th>Hours</th><th>Notes</th><th></th></tr></thead>
        <tbody>
            @foreach (var i in Model.Items)
            {
                    <tr>
                        <td><input value="@(i.Date?.ToString("yyyy-MM-dd"))" disabled /></td>
                        <td><input value="@i.Module" disabled /></td>
                        <td><input value="@i.Hours" disabled /></td>
                        <td><input value="@i.Notes" disabled /></td>
                        <td><button class="disabled" disabled>Remove</button></td>
                    </tr>
            }
        </tbody>
    </table>

    <div class="actions">
        <button class="disabled" disabled>Add Row</button>
        <button class="disabled" disabled>Submit</button>
    </div>
    <p class="note">Buttons are disabled intentionally (wireframe requirement).</p>
</section>

